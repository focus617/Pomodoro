<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false">

        <shape android:shape="rectangle">
            <!-- 填充的颜色,这里是按钮的背景色 -->
            <solid android:color="#F2F2F2" />

            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="75dip" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <!-- 这里是没有被点击边框的颜色 -->
            <!--            <stroke android:width="2px" android:color="#FB7299" />-->

        </shape>
    </item>

    <item android:state_selected="true">
        <shape>

            <!-- 填充的颜色 -->
            <solid android:color="@color/design_default_color_surface" />

            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="75dip" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <!-- 这里是被点击后边框的颜色 -->
            <stroke android:width="2px" android:color="#BC627B" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>

            <!-- 填充的颜色 -->
            <solid android:color="@color/design_default_color_surface" />

            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="75dip" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <!-- 这里是被点击后边框的颜色 -->
            <stroke android:width="2px" android:color="#BC627B" />
        </shape>
    </item>


</selector>
